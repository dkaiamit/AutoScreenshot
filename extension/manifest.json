{
  "manifest_version": 3,
  "name": "Webpage Screenshot Automator",
  "description": "Capture scrolling screenshots with login support.",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
