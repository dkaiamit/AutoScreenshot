{
  "manifest_version": 3,
  "name": "Webpage Screenshot Automator",
  "description": "Login and take screenshots after MFA.",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
